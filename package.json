{
  "name": "c3-electron",
  "version": "0.0.4",
  "description": "Construct 3 running inside of Electron",
  "main": "main.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "prod": "run-s build dist"
  },
  "repository": "https://github.com/Armaldio/c3-desktop",
  "keywords": [
    "Electron",
    "construct"
  ],
  "author": "Armaldio <armaldio@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "12",
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-plugin-router": "^4.1.0",
    "@vue/cli-plugin-typescript": "^4.1.0",
    "@vue/cli-plugin-vuex": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "electron": "^8.0.0",
    "electron-builder": "^22.3.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.23.7",
    "sass-loader": "^8.0.0",
    "typescript": "~3.5.3",
    "vue-cli-plugin-vuetify": "^2.0.3",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.3.0"
  },
  "dependencies": {
    "@mdi/font": "^4.9.95",
    "core-js": "^3.4.4",
    "electron-context-menu": "^0.16.0",
    "electron-serve": "^0.4.1",
    "electron-updater": "^4.2.0",
    "roboto-fontface": "*",
    "vue": "^2.6.11",
    "vue-router": "^3.1.3",
    "vuetify": "^2.1.0",
    "vuex": "^3.1.2"
  },
  "build": {
    "asar": false,
    "directories": {
      "output": "bin"
    },
    "files": [
      "!config.json",
      "!src/*",
      "dist",
      "*.js"
    ],
    "fileAssociations": [
      {
        "ext": "c3p",
        "name": "Construct 3 Project File"
      },
      {
        "ext": "c3addon",
        "name": "Construct 3 Addon File"
      }
    ],
    "appId": "com.armaldio.c3-desktop",
    "publish": [
      "github"
    ],
    "win": {
      "target": [
        "dir",
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
